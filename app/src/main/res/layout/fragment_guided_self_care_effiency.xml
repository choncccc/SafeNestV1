<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuidedSelfCareEffiency"
    android:background="@color/red">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/shrikhan"
                android:text="Guided Self Care\n Efficiency"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|top">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/AppointmentReminderData"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            app:cardBackgroundColor="@color/a4"
                            app:cardCornerRadius="24dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/baseline_push_pin_24"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/glacial"
                                android:text="Appointment\n Reminder"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="italic" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/ToDoData"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="@color/a4"
                            app:cardCornerRadius="24dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="160dp"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_format_list_bulleted_24"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/glacial"
                                android:textStyle="italic"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:text="To-Do List"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/white"
                                android:layout_gravity="bottom|center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/WeightTracker"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="@color/a4"
                            app:cardCornerRadius="24dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="160dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/baseline_monitor_weight_24"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/glacial"
                                android:textStyle="italic"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:text="Weight Tracker"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/white"
                                android:layout_gravity="bottom|center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="2dp"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/PersonalizedNotif"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            app:cardBackgroundColor="@color/a4"
                            app:cardCornerRadius="24dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/baseline_notifications_24"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/glacial"
                                android:textStyle="italic"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:text="Personalized\n Notification"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/white"
                                android:layout_gravity="bottom|center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/MedicationTracker"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="@color/a4"
                            app:cardCornerRadius="24dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="160dp"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_medication_24"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/glacial"
                                android:textStyle="italic"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:text="Medication Tracker"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/white"
                                android:layout_gravity="bottom|center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/SymptomsCheck"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="@color/a4"
                            app:cardCornerRadius="24dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_flag_24" />

                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/glacial"
                                android:textStyle="italic"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:text="Symptom Checker \nwith Red Flag"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/white"
                                android:layout_gravity="bottom|center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>