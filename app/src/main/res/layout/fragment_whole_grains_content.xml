<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red"
    tools:context=".WholeGrainsContent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/shrikhan"
        android:text="Nutrition\n Guidance"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_gravity="center|top">
        <androidx.cardview.widget.CardView
            android:id="@+id/foodSafetyContents"
            android:layout_width="wrap_content"
            android:layout_height="390dp"
            app:cardBackgroundColor="@color/a4"
            app:cardCornerRadius="24dp">
            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="305dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="345dp"
                    android:layout_height="245dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wholegrains" />
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shrikhan"
                android:text="Whole Grains, Legumes and Starchy Vegetables"
                android:textAlignment="center"
                android:textColor="@color/fffff"
                android:layout_marginBottom="85dp"
                android:textSize="20sp"
                android:layout_gravity="bottom|center"/>
            <TextView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/glacial"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:gravity="fill_horizontal"
                android:layout_gravity="bottom|center"
                android:text="@string/wholegrains"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>