<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".AddWeight">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:fontFamily="@font/shrikhan"
        android:text="Weight Tracker"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/peach"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="24dp">
                <EditText
                    android:id="@+id/WeightTracker_Age"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:background="@drawable/roundgrid"
                    android:textColor="@color/white"
                    android:fontFamily="@font/glacial"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:fontFamily="@font/glacial"
            android:textColor="@color/peach"
            android:background="@drawable/roundedtextview"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="190dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_horizontal"
            android:background="@drawable/round_edittext">

            <GridLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/roundgrid"
                android:columnCount="1"
                android:rowCount="3">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_row="0"
                    android:layout_column="0">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kg, cm"
                                android:textColor="@color/peach" />
                        </LinearLayout>
                    <View
                        android:layout_width="300dp"
                        android:background="@color/peach"
                        android:layout_height="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_row="1"
                    android:layout_column="0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lbs, inches"
                            android:textColor="@color/peach" />
                    </LinearLayout>
                    <View
                        android:layout_width="300dp"
                        android:background="@color/peach"
                        android:layout_height="2dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="0"
                        android:layout_column="0">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="st, inches"
                                android:fontFamily="@font/glacial"
                                android:textColor="@color/peach" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </GridLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Units"
            android:background="@drawable/roundedtextview"
            android:textColor="@color/peach"
            android:fontFamily="@font/glacial"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="15dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/peach"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center">
                    <EditText
                        android:id="@+id/WeightTracker_Height"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@drawable/roundgrid"
                        android:textColor="@color/white"
                        android:fontFamily="@font/glacial"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:text="cm"
                    android:fontFamily="@font/glacial"
                    android:textColor="@color/a4"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Height"
            android:fontFamily="@font/glacial"
            android:textColor="@color/peach"
            android:background="@drawable/roundedtextview"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/peach"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center">
                    <EditText
                        android:id="@+id/WeightTracker_Weight"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@drawable/roundgrid"
                        android:textColor="@color/white"
                        android:fontFamily="@font/glacial"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:text="kg"
                    android:fontFamily="@font/glacial"
                    android:textColor="@color/a4"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:fontFamily="@font/glacial"
            android:textColor="@color/peach"
            android:background="@drawable/roundedtextview"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/a4"
        android:text="save"
        android:textSize="20sp"
        android:fontFamily="@font/shrikhan"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="60dp"/>

    </LinearLayout>
    </ScrollView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"/>
</FrameLayout>