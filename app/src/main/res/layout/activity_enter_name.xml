<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/red">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lovelo"
            android:letterSpacing=".4"
            android:text="SAFENEST"
            android:textColor="@color/white"
            android:textSize="31sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lovelo"
            android:letterSpacing=".3"
            android:singleLine="true"
            android:text="@string/label"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="welcome"
            android:textColor="@color/white"
            android:fontFamily="@font/shrikhan"
            android:textAlignment="center"
            android:textSize="48sp"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="@string/enter_name"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/glacial"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <EditText
            android:id="@+id/getDisplayName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_round"
            android:hint="Enter your name"
            android:textColor="@color/red"
            android:textColorHint="@color/red"
            android:textSize="13sp"
            android:paddingStart="12dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>
        <Button
            android:id="@+id/MoveToHome"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/fc"
            android:text="Next"
            android:textColor="@color/red"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>