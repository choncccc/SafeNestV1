<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSelfAssessment"
    android:background="@color/red">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Self-directed\n Assessment"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/shrikhan"
                android:textSize="26sp"/>

            <!--DashBoard-->
            <LinearLayout
                android:id="@+id/HealthMonitoringCard"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/MonitoringContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    app:cardBackgroundColor="@color/a4"
                    app:cardCornerRadius="24dp">
                    <LinearLayout
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/BloodPressurecard"
                            android:layout_width="140dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            app:cardBackgroundColor="@color/peach"
                            app:cardCornerRadius="24dp">
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/BloodSugarCard"
                            android:layout_width="190dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="35dp"
                            app:cardBackgroundColor="@color/peach"
                            app:cardCornerRadius="24dp">
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="300dp"
                        android:fontFamily="@font/glacial"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Health Monitorning Dashboard"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom|center"/>
                    <LinearLayout
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="75dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/BodyTempCard"
                            android:layout_width="190dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            app:cardBackgroundColor="@color/peach"
                            app:cardCornerRadius="24dp">
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/PulseRateCard"
                            android:layout_width="140dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="35dp"
                            app:cardBackgroundColor="@color/peach"
                            app:cardCornerRadius="24dp">
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--Integrated Health Records -->
        <LinearLayout
            android:id="@+id/IntegratedHealthCard"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardBackgroundColor="@color/a4"
                app:cardCornerRadius="24dp">
                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="360dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/medical_folder"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/glacial"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Integrated Health Records"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom|center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <!--Nutrition Guidance-->
            <LinearLayout
                android:id="@+id/NutritionGuidanceCard"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:cardBackgroundColor="@color/a4"
                    app:cardCornerRadius="24dp">
                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:src="@drawable/fruit_basket"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/glacial"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Nutrition Guidance"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom|center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>