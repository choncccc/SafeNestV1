<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MedicationTrackerAddMeds"
    android:background="@color/red">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/shrikhan"
                        android:text="Medication Tracker"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/roundedtextview"
                        android:fontFamily="@font/shrikhan"
                        android:text="Register Medication"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/MedicationName"
                            android:layout_width="380dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_edittext"
                            android:paddingStart="12dp"
                            android:textColor="@color/red" />
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Medication Name"
                            android:fontFamily="@font/glacial"
                            android:background="@drawable/roundedtextview"
                            android:textColor="@color/peach"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="15dp"
                            android:layout_marginStart="15dp"/>

                    </RelativeLayout>

                    <!--Frequency-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="380dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_edittext">
                            <Spinner
                                android:id="@+id/frequencySpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:paddingBottom="20dp"
                                android:backgroundTint="@color/peach"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Frequency"
                            android:background="@drawable/roundedtextview"
                            android:textColor="@color/peach"
                            android:fontFamily="@font/glacial"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="15dp"
                            android:layout_marginStart="15dp"/>
                    </RelativeLayout>

                    <!--Schedule Mode-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="380dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_edittext">
                            <Spinner
                                android:id="@+id/ScheduleModeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="After Breakfast - After Lunch - After Dinner"
                                android:layout_gravity="center"
                                android:layout_marginEnd="25dp"
                                android:textColor="@color/a4"
                                android:textStyle="italic"
                                android:layout_marginTop="-15dp"
                                android:textSize="8sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Schedule Mode"
                            android:background="@drawable/roundedtextview"
                            android:fontFamily="@font/glacial"
                            android:textColor="@color/peach"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="15dp"
                            android:layout_marginStart="15dp"/>
                    </RelativeLayout>

                    <!--Schedule-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="380dp"
                            android:layout_height="230dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="15dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/round_edittext">

                            <GridLayout
                                android:layout_width="300dp"
                                android:layout_height="155dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/roundgrid"
                                android:columnCount="3"
                                android:rowCount="4">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_row="0"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Label"
                                            android:textColor="@color/peach"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="7dp"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="300dp"
                                        android:background="@color/peach"
                                        android:layout_height="2dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:orientation="vertical"
                                    android:layout_row="1"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="After Breakfast"
                                            android:textColor="@color/peach"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="7dp"/>
                                        <View
                                            android:layout_width="300dp"
                                            android:layout_gravity="bottom"
                                            android:layout_marginStart="-115dp"
                                            android:background="@color/peach"
                                            android:layout_height="2dp"/>
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_row="2"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="After Lunch"
                                            android:textColor="@color/peach"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="7dp"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="300dp"
                                        android:background="@color/peach"
                                        android:layout_height="2dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_row="3"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="After Dinner"
                                            android:textColor="@color/peach"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="7dp"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dosage"
                                    android:textColor="@color/peach"
                                    android:layout_marginStart="-150dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="7dp"/>
                                <EditText
                                    android:id="@+id/MedicationScheduleBreakfast"
                                    android:layout_row="1"
                                    android:background="@drawable/meds"
                                    android:layout_column="1"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="0.1"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/peach"
                                    android:layout_marginStart="-150dp"
                                    />
                                <EditText
                                    android:id="@+id/MedicationScheduleLunch"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_row="2"
                                    android:layout_column="1"
                                    android:layout_marginStart="-150dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/meds"
                                    android:text="0.1"
                                    android:textAlignment="center"
                                    android:textColor="@color/peach"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/MedicationScheduleDinner"
                                    android:layout_row="3"
                                    android:background="@drawable/meds"
                                    android:layout_column="1"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="0.1"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/peach"
                                    android:layout_marginStart="-150dp" />

                                <ImageView
                                    android:id="@+id/MedicationScheduleBreakfastRemove"
                                    android:layout_row="1"
                                    android:layout_column="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/trash"
                                    android:layout_marginStart="65dp"
                                    android:layout_marginTop="8dp" />
                                <ImageView
                                    android:id="@+id/MedicationScheduleLunchRemove"
                                    android:layout_row="2"
                                    android:layout_column="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/trash"
                                    android:layout_marginStart="65dp"
                                    android:layout_marginTop="8dp" />
                                <ImageView
                                    android:id="@+id/MedicationScheduleDinnerRemove"
                                    android:layout_row="3"
                                    android:layout_column="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/trash"
                                    android:layout_marginStart="65dp"
                                    android:layout_marginTop="8dp" />
                            </GridLayout>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Schedule"
                            android:background="@drawable/roundedtextview"
                            android:textColor="@color/peach"
                            android:fontFamily="@font/glacial"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="15dp"
                            android:layout_marginStart="15dp"/>
                        <ImageButton
                            android:id="@+id/MedicationScheduleAddRows"
                            android:background="@drawable/drawablebutton2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/newbtn"
                            android:layout_marginTop="195dp"
                            android:layout_marginStart="185dp"/>
                    </RelativeLayout>

                    <!--Notif Time-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="380dp"
                            android:layout_height="230dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="15dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/round_edittext">

                            <GridLayout
                                android:layout_width="300dp"
                                android:layout_height="160dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/roundgrid"
                                android:columnCount="3"
                                android:rowCount="4">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_row="0"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Time"
                                            android:textColor="@color/peach"
                                            android:layout_marginStart="30dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="7dp"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="300dp"
                                        android:background="@color/peach"
                                        android:layout_height="2dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_row="1"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <EditText
                                            android:id="@+id/MedicationNotificationTime1"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_row="1"
                                            android:layout_column="1"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="7dp"
                                            android:background="@drawable/meds"
                                            android:text="7:00"
                                            android:textAlignment="center"
                                            android:textColor="@color/peach"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                    <View
                                        android:layout_width="300dp"
                                        android:background="@color/peach"
                                        android:layout_height="2dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_row="2"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <EditText
                                            android:id="@+id/MedicationNotificationTime2"
                                            android:layout_row="1"
                                            android:background="@drawable/meds"
                                            android:layout_column="1"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:text="13:00"
                                            android:textAlignment="center"
                                            android:textSize="16sp"
                                            android:textColor="@color/peach"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="7dp"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="300dp"
                                        android:background="@color/peach"
                                        android:layout_height="2dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_row="3"
                                    android:layout_column="0">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <EditText
                                            android:id="@+id/MedicationNotificationTime3"
                                            android:layout_row="1"
                                            android:background="@drawable/meds"
                                            android:layout_column="1"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:text="19:00"
                                            android:textAlignment="center"
                                            android:textSize="16sp"
                                            android:textColor="@color/peach"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="10dp" />
                                    </LinearLayout>
                                </LinearLayout>


                                <ImageView
                                    android:id="@+id/MedicationNotificationTime1Remove"
                                    android:layout_row="1"
                                    android:layout_column="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/trash"
                                    android:layout_marginStart="-50dp"
                                    android:layout_marginTop="8dp" />
                                <ImageView
                                    android:id="@+id/MedicationNotificationTime2Remove"
                                    android:layout_row="2"
                                    android:layout_column="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/trash"
                                    android:layout_marginStart="-50dp"
                                    android:layout_marginTop="8dp" />
                                <ImageView
                                    android:id="@+id/MedicationNotificationTime3Remove"
                                    android:layout_row="3"
                                    android:layout_column="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/trash"
                                    android:layout_marginStart="-50dp"
                                    android:layout_marginTop="8dp" />
                            </GridLayout>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Notification Time"
                            android:background="@drawable/roundedtextview"
                            android:textColor="@color/peach"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/glacial"
                            android:paddingStart="8dp"
                            android:paddingEnd="15dp"
                            android:layout_marginStart="15dp"/>
                        <ImageButton
                            android:id="@+id/MedicationNotificationTimeAddRows"
                            android:background="@drawable/drawablebutton2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/newbtn"
                            android:layout_marginTop="200dp"
                            android:layout_marginStart="185dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="380dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/round_edittext">
                            <TextView
                                android:id="@+id/toggleLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/red"
                                android:text="OFF"/>
                                <Switch
                                    android:id="@+id/toggleSwitch"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:thumbTint="@color/a4"
                                    android:trackTint="@color/red"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/roundedtextview"
                            android:paddingStart="8dp"
                            android:paddingTop="5dp"
                            android:fontFamily="@font/glacial"
                            android:paddingEnd="15dp"
                            android:paddingBottom="5dp"
                            android:text="Notification"
                            android:textColor="@color/peach" />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/MedicationSaveToDB"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/a4"
                        android:text="save"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/shrikhan"
                        android:layout_gravity="center"/>
                </LinearLayout>
        </ScrollView>
</FrameLayout>