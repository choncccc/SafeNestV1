<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadingFragment"
    android:background="@color/red">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Education"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/shrikhan"
                android:textSize="26sp"/>

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edit_round"
                    android:backgroundTint="@color/a4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trimester-Specific Health"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/shrikhan"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/shrikhan"
                    android:textSize="22sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/FirstTrimesterCard"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/df"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="24dp">
                    <LinearLayout
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="2dp">
                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:src="@drawable/trimester_one"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/glacial"
                        android:textStyle="italic"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:text="First Trimester\nDescription"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/SecondTrimesterCard"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/df"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="24dp">
                    <LinearLayout
                        android:layout_width="375dp"
                        android:layout_height="260dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:src="@drawable/trimester_second"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/glacial"
                        android:textStyle="italic"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:text="Second Trimester\nDescription"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ThirdTrimesterCard"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/df"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="24dp">
                    <LinearLayout
                        android:layout_width="375dp"
                        android:layout_height="260dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:src="@drawable/trimester_third"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/glacial"
                        android:textStyle="italic"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:text="Third Trimester\nDescription"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>