<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/shrikhan"
                    android:text="Nutrition\n Guidance"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp" />
            </LinearLayout>


            <!--Circle-->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="350dp"
                app:cardCornerRadius="170dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/peach">

                    <!-- Separations -->
                    <View
                        android:id="@+id/verticalDivider1"
                        android:layout_width="2dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/fffff"/>

                    <View
                        android:id="@+id/horizontalDivider"
                        android:layout_width="175dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="220dp"
                        android:background="@color/fffff"/>

                    <View
                        android:id="@+id/verticalDivider2"
                        android:layout_width="2dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/fffff"/>

                    <View
                        android:id="@+id/horizontalDivider2"
                        android:layout_width="175dp"
                        android:layout_height="2dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="165dp"
                        android:background="@color/fffff"/>

                    <RelativeLayout
                        android:id="@+id/NonStarchySection"
                        android:layout_width="wrap_content"
                        android:layout_height="215dp"
                        android:background="@color/peach"
                        android:layout_marginEnd="2dp"
                        android:layout_toLeftOf="@id/verticalDivider1"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="73dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns2"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns3"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns4"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="73dp"
                            android:layout_marginTop="135dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ns5"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="100dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ns6"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="125dp"
                            android:layout_marginTop="135dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns7"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="140dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ns8"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="170dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns9"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="73dp"
                            android:layout_marginTop="170dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns10"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="170dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ns11"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lovelo"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/fffff"
                            android:textStyle="bold"
                            android:layout_marginTop="100dp"
                            android:textAlignment="viewEnd"
                            android:textSize="15dp"
                            android:text="NON STARCHY VEGETABLES"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ProteinSection"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:background="@color/peach"
                        android:layout_marginStart="2dp"
                        android:layout_toEndOf="@id/verticalDivider1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/p1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/p2"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="25dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/p3"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="65dp"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/p4"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="90dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/p5"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="100dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/p6"
                            android:layout_marginStart="105dp"
                            android:layout_marginTop="105dp"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/p7"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="125dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lovelo"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/fffff"
                            android:textStyle="bold"
                            android:layout_marginTop="70dp"
                            android:textAlignment="viewStart"
                            android:textSize="15dp"
                            android:text="PROTEIN"/>
                    </RelativeLayout>

                <RelativeLayout
                    android:clickable="true"
                    android:id="@+id/WholeGrainsSection"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:background="@color/peach"
                    android:layout_marginEnd="2dp"
                    android:layout_below="@id/horizontalDivider2"
                    android:layout_toRightOf="@id/verticalDivider2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w1"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w3"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w4"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w5"
                        android:layout_marginStart="103dp"
                        android:layout_marginTop="55dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w6"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="115dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w7"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="110dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lovelo"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/fffff"
                        android:textStyle="bold"
                        android:layout_marginTop="50dp"
                        android:textAlignment="viewStart"
                        android:textSize="15dp"
                        android:text="WHOLE GRAINS, \nLEGUMES AND\nStarchy\nVegetables"/>
                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:background="@color/peach"
                        android:layout_marginTop="2dp"
                        android:layout_below="@id/horizontalDivider"
                        android:layout_toLeftOf="@id/verticalDivider2">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/f1"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="115dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/f3"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="5dp"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/f2"
                            android:layout_marginStart="23dp"
                            android:layout_marginTop="5dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/f4"
                            android:layout_marginStart="115dp"
                            android:layout_marginTop="55dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/f5"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="50dp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/foodSafetyContents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/a4"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="24dp">
                    <LinearLayout
                        android:layout_width="375dp"
                        android:layout_height="305dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="345dp"
                            android:layout_height="275dp"
                            android:layout_gravity="center"
                            android:src="@drawable/food_safety"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shrikhan"
                        android:text="Food Safety"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:layout_gravity="bottom|center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
    </ScrollView>

    <!--Bottom Sheet-->
    <FrameLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/roundbottomsheet">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_24"
            android:scaleType="centerCrop"
            android:layout_gravity="center|top"/>
            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:fontFamily="@font/shrikhan"
                android:text="Nutrition\n Guidance"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:textSize="26sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarSize="10dp">

            <!--Main Container on Bottom Sheet-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:orientation="vertical">

                <!--BS1-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bs1"
                        android:layout_width="wrap_content"
                        android:layout_height="270dp"
                        app:cardBackgroundColor="@color/a4"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="24dp">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="240dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/bs1"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial"
                            android:text="@string/bs1"
                            android:textColor="@color/white"
                            android:justificationMode="inter_word"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:layout_gravity="bottom"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bs2"
                        android:layout_width="wrap_content"
                        android:layout_height="275dp"
                        app:cardBackgroundColor="@color/a4"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="24dp">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="240dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/bs2"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial"
                            android:text="@string/bs2"
                            android:textColor="@color/white"
                            android:justificationMode="inter_word"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:layout_gravity="bottom"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--BS3-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_height="260dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bs3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/a4"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="24dp">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="240dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/bs3"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial"
                            android:text="@string/bs3"
                            android:textColor="@color/white"
                            android:justificationMode="inter_word"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="15dp"
                            android:textSize="14sp"
                            android:layout_gravity="bottom"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                <!--BS4-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bs4"
                        android:layout_width="wrap_content"
                        android:layout_height="275dp"
                        app:cardBackgroundColor="@color/a4"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="24dp">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="240dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/bs4"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial"
                            android:text="@string/bs4"
                            android:textColor="@color/white"
                            android:justificationMode="inter_word"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:layout_gravity="bottom"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--BS5-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bs5"
                        android:layout_width="wrap_content"
                        android:layout_height="275dp"
                        app:cardBackgroundColor="@color/a4"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="24dp">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="240dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/bs5"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial"
                            android:text="@string/bs5"
                            android:textColor="@color/white"
                            android:justificationMode="inter_word"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:layout_gravity="bottom"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom"/>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>