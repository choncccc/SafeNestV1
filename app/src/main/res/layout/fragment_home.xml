<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center|top">
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/glacial"
                android:text="Today"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/df"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="24dp">
                <LinearLayout
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/HomeName"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/glacial"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:text="Hello [name]!"
                        android:textColor="@color/white"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"/>
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:src="@drawable/logonobg"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/white_right_arrow"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"/>

            </androidx.cardview.widget.CardView>
            <!--Weeks-->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/peach"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="24dp">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="375dp"
                    android:layout_height="55dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/HomeWeeks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/glacial"
                        android:textStyle="bold"
                        android:text="[] Weeks"/>
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="330dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:max="42"
                        android:progressBackgroundTint="@color/white"
                        android:progressTint="@color/red"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/HomeTrimester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/glacial"
                    android:textStyle="bold"
                    android:text="Trimester []"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/df"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="24dp">
                <LinearLayout
                    android:layout_width="375dp"
                    android:layout_height="355dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/HomeDynamicImage"
                        android:layout_gravity="center"
                        android:layout_width="325dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="90dp"
                        android:src="@drawable/week_sixmodified"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/HomeDynamicText"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:fontFamily="@font/glacial"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:layout_marginTop="-90dp"
                        android:text="@string/sixweek"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>