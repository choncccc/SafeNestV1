<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalizedNotif"
    android:background="@color/red">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personalized\n Notification"
        android:textAlignment="center"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/shrikhan"
        android:textSize="26sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/MainParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--
       <TextView
           android:layout_width="360dp"
           android:layout_gravity="center"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:textColor="@color/peach"
           android:fontFamily="@font/glacial"
           android:textSize="16sp"
           android:gravity="center_horizontal"
           android:background="@drawable/overviewgrid"
           android:text="" />
          -->

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/addNotification"
        android:backgroundTint="@color/peach"
        android:background="@drawable/round_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_add_24"
        android:layout_gravity="right|bottom"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"/>


    <FrameLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/roundbottomsheet">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_24"
            android:scaleType="centerCrop"
            android:layout_gravity="center|top"/>
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/shrikhan"
            android:text="Personalized Notification"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp" />
        <FrameLayout
            android:id="@+id/maincontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtNotifDate"
                    android:layout_width="380dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/round_edittext"
                    android:paddingStart="12dp"
                    android:hint="MM/DD/YYYY"
                    android:textSize="15dp"
                    android:textColorHint="@color/red"
                    android:textColor="@color/red" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:fontFamily="@font/glacial"
                    android:background="@drawable/roundedtextview"
                    android:textColor="@color/peach"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="75dp">

                <EditText
                    android:id="@+id/txtPersonalizedNotif"
                    android:layout_width="380dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/round_edittext"
                    android:paddingStart="12dp"
                    android:textSize="15dp"
                    android:textColorHint="@color/red"
                    android:textColor="@color/red" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Personalized Nofication"
                    android:fontFamily="@font/glacial"
                    android:background="@drawable/roundedtextview"
                    android:textColor="@color/peach"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="15dp"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btnSaveNofication"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/a4"
                android:fontFamily="@font/shrikhan"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="170dp"
                android:textColor="@color/white"
                android:text="Save" />
        </FrameLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="bottom"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>