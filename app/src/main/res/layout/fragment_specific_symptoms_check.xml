<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/red"
    android:layout_height="match_parent"
    tools:context=".SpecificSymptomsCheck">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms Checker\nwith Red Flag"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/shrikhan"
            android:textSize="26sp"/>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/perTrimester"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/a4"
                    android:text="per trimester"
                    android:fontFamily="@font/shrikhan"/>
                <Button
                    android:id="@+id/perSpecificSymp"
                    android:textColor="@color/white"
                    android:layout_width="180dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/a4"
                    android:text="specific symptoms"
                    android:fontFamily="@font/shrikhan"/>
            </LinearLayout>

            <EditText
                android:id="@+id/txtBox"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/overviewgrid"
                android:hint="What are you experiencing?"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:fontFamily="@font/glacial"
                android:drawableEnd="@drawable/baseline_search_24"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"/>

            <TextView
                android:id="@+id/TVResults"
                android:layout_marginTop="10dp"
                android:layout_width="370dp"
                android:layout_height="250dp"
                android:text="intervention"
                android:paddingStart="20dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/glacial"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:background="@drawable/overviewgrid" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>