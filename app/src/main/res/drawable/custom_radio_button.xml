<!-- custom_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/red" /> <!-- Change color as needed -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/fc" /> <!-- Change color as needed -->
        </shape>
    </item>
</selector>
